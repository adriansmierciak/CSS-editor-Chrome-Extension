{
  "name": "Internetowy edytor CSS",
  "description": "Edycja DOM",
  "version": "1.0",
  "options_page": "options.html",
  "manifest_version": 2,

  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Internetowy edytor CSS",
    "default_icon": "icons/16.png",
    "default_popup": "popup.html"
  }
}

